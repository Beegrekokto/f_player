<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add Player
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Player</h4>
      </div>
      <div class="modal-body">

      <%= simple_form_for Player.new do |p| %>
      <%= p.input :name %>
      <%= p.input :age %>
      <%= p.input :nationality %>
      <%= p.input :wiki %>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= p.submit 'submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
 <% end %>





 <% @players.each_with_index do |p, i| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Player <%=i + 1 %>  <h2><%= p.name %></h2></h1>
  </div>
  <div class="panel-body">
  
<blockquote>
 
 <h3><%= p.age %></h3>
 <h4><%= p.nationality %></h4>
 <h5><%= p.wiki %></h5>
 </blockquote>
 <br>
 <%= link_to 'Delete', player_path(p), method: :delete, class: 'btn btn-sm btn-danger', data:{confirm: "Are you sure?"} %>
 <%= link_to 'Edit', edit_player_path(p), class: 'btn btn-sm btn-success' %>



  </div>
</div>
<% end %>
<%= will_paginate @players %>




















